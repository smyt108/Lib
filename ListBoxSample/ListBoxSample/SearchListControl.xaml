<UserControl x:Class="ListBoxSample.SearchListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:ListBoxSample" 
             mc:Ignorable="d" 
             x:Name="m_self"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>

        <model:SearchListDataTemplateSelector x:Key="myTemplate_Selector" />
        
    </UserControl.Resources>
    
    <Grid>
        <ListBox ItemsSource="{Binding SearchListControlItemSource, ElementName=m_self}" ItemTemplateSelector="{StaticResource myTemplate_Selector}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</UserControl>
