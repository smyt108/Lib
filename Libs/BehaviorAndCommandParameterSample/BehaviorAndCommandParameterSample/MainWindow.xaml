<Window x:Class="BehaviorAndCommandParameterSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:self="clr-namespace:BehaviorAndCommandParameterSample"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="White Backgound Command" Grid.Row="0" Command="{Binding ButtonCommand}" CommandParameter="{Binding ElementName= m_dataGrid}"/>
        <DataGrid Grid.Row="1" x:Name="m_dataGrid" self:ChangeDataGridBackgroundBehavior.Background="#FFCC00">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Column1"/>
                <DataGridTextColumn Header="Column2"/>
                <DataGridTextColumn Header="Column3"/>
                <DataGridTextColumn Header="Column4"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
