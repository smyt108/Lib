<UserControl x:Class="DevExpress.Control.CustomTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:behavior="clr-namespace:DevExpress.Control"
             mc:Ignorable="d" x:Name="CustomTab"
             d:DesignHeight="300" d:DesignWidth="300">

    <dx:DXTabControl Name="MyTabControl" ItemsSource="{Binding ListTab.ListTabItem}">
        <dx:DXTabControl.View>
            <dx:TabControlStretchView NewButtonShowMode="InTabPanel" />
        </dx:DXTabControl.View>
        <dx:DXTabControl.ItemHeaderTemplate>
            <DataTemplate>
                <dxe:TextEdit EditValue="{Binding Path=.}">
                    <dxmvvm:Interaction.Behaviors>
                        <behavior:TextEditBehavior/>
                    </dxmvvm:Interaction.Behaviors>
                </dxe:TextEdit>
            </DataTemplate>
        </dx:DXTabControl.ItemHeaderTemplate>
    </dx:DXTabControl>

</UserControl>
